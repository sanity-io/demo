{
  "type": "module",
  "name": "@sanity/demo",
  "version": "1.0.0-alpha.3",
  "description": "Design tokens for implementing demos and templates at Sanity.io.",
  "files": [
    "dist",
    "src",
    "tailwind.js"
  ],
  "types": "./dist/index.d.ts",
  "source": "./exports/index.ts",
  "module": "./dist/index.js",
  "main": "./dist/index.cjs",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "source": "./exports/index.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    },
    "./tailwind": {
      "types": "./dist/tailwind.d.ts",
      "source": "./exports/tailwind.ts",
      "import": "./dist/tailwind.js",
      "require": "./dist/tailwind.cjs",
      "default": "./dist/tailwind.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "rimraf dist && pkg build --strict",
    "dev": "pnpm build && pnpm --filter *-docs dev",
    "format": "prettier --write --cache --ignore-unknown .",
    "lint": "eslint . --ext .cjs,.js,.jsx,.mjs,.ts,.tsx",
    "prepare": "husky install",
    "prepublishOnly": "pnpm build",
    "release": "semantic-release",
    "test": "echo \"Error: no test specified\" && exit 0",
    "type-check": "tsc --build",
    "watch": "pkg watch --strict"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sanity-io/demo.git"
  },
  "author": "Sanity.io <hello@sanity.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sanity-io/demo/issues"
  },
  "homepage": "https://github.com/sanity-io/demo#readme",
  "keywords": [
    "sanity",
    "demo",
    "design",
    "tokens",
    "guidelines",
    "docs"
  ],
  "devDependencies": {
    "@commitlint/cli": "^17.2.0",
    "@commitlint/config-conventional": "^17.2.0",
    "@sanity/color": "2.1.16",
    "@sanity/pkg-utils": "^1.18.0",
    "@sanity/semantic-release-preset": "^2.0.2",
    "@types/node": "^18.11.9",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.8",
    "@typescript-eslint/eslint-plugin": "^5.42.1",
    "@typescript-eslint/parser": "^5.42.1",
    "commitizen": "^4.2.5",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.10",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.0.3",
    "postcss": "^8.4.18",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "rimraf": "^3.0.2",
    "semantic-release": "^19.0.5",
    "tailwindcss": "^3.2.2",
    "typescript": "^4.8.4"
  },
  "peerDependencies": {
    "@sanity/color": "^2",
    "tailwindcss": "^3"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*": "prettier --write --cache --ignore-unknown",
    "*.{cjs,js,jsx,mjs,ts,tsx}": "eslint"
  },
  "packageManager": "pnpm@7.12.2",
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "extends": "@sanity/semantic-release-preset",
    "branches": [
      "+([0-9])?(.{+([0-9]),x}).x",
      "main",
      {
        "name": "beta",
        "prerelease": true
      },
      {
        "name": "alpha",
        "prerelease": true
      }
    ]
  }
}
